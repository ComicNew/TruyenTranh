<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="230dp"
    android:layout_margin="4dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/imgThumb"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/bgtest" />

            <TextView
                android:id="@+id/tvChapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_chapter"
                android:padding="8sp"
                android:text="chapter 7"
                android:textColor="#fff"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btn_Delete"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_View"
                android:layout_alignParentRight="true"
                android:background="@drawable/like_click"
                android:padding="8dp"
                android:src="@drawable/delete" />

            <TextView
                android:id="@+id/tv_View"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/editext"
                android:drawableLeft="@drawable/eye"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="xx"
                android:textColor="#FFF"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="tên truyện xxxxxxxxxxxxx"
            android:textColor="#000"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>